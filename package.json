{
    "name": "reflect",
    "version": "1.4.0",
    "description": "",
    "main": "blocker/background.js",
    "dependencies": {
        "@types/chrome": "0.0.92",
        "@types/jquery": "^3.3.31",
        "@types/jqueryui": "^1.12.10",
        "esbuild": "^0.8.26"
    },
    "scripts": {
        "copy": "cp build/*.js dist/src/",
        "build": "tsc && npm run copy && npm run esbuild",
        "esbuild": "esbuild build/background.js build/content.js build/example_for_reference.js --sourcemap --bundle --outdir=dist/src",
        "watch": "nodemon -e ts -x \"npm run build\"",
        "clean": "rm dist/src/*"
    },
    "devDependencies": {
        "@types/node": "^18.7.13",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "clang-format": "^1.2.3",
        "husky": "^4.2.5",
        "nodemon": "^2.0.4",
        "parcel-bundler": "^1.7.1",
        "prettier": "^2.5.1",
        "pretty-quick": "^2.0.1",
        "typescript": "^4.7.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged --pattern '**/*.ts'"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/getreflect/reflect-chrome.git"
    },
